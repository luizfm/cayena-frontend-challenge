{
  "compilerOptions": {
      "module": "ESNext",
      "target": "es2020",
      "allowJs": true,
      "checkJs": false,
      "jsx": "react-jsx",
      "outDir": "./build",
      "rootDir": "./src",
      "removeComments": true,
      "pretty": true,
      "skipLibCheck": true,
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
        "@/styles/*": ["./src/styles/*"]
      }
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}